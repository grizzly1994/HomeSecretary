<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:spring="http://www.springframework.org/tags"
	xmlns:form="http://www.springframework.org/tags/form">
	
	<jsp:output doctype-root-element="HTML" doctype-system="about:legacy-compat" />
	<jsp:directive.page contentType="text/html;charset=UTF-8" />
	<jsp:directive.page pageEncoding="UTF-8" />
	
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=8" />
		
		<spring:url value="/resources/styles/standart.css" var="reportsCssUrl" />
        <link rel="stylesheet" type="text/css" media="screen" href="${reportsCssUrl}" />
		
		<title><spring:message code="user.password.restore" /> - <spring:message code="app.name" /></title>
	</head>
	<body class="form">
		<div id="header">
			<h1><spring:message code="user.password.restore" /></h1>
		</div>
		<form:form modelAttribute="entity" method="post" action="restore" enctype="multipart/form-data">
			<p>
				<form:label path="username">
					<spring:message code="user.email" />
				</form:label>
				<form:input path="username" />
			</p>
			<p>
				<spring:message code="user.password.restore.instruction" />
			</p>
			<p>
				<spring:message code="ok" var="ok"/>
				<input type="submit" value="${ok}" />
			</p>
		</form:form>
	</body>
</html>