<html xmlns:jsp="http://java.sun.com/JSP/Page"
	xmlns:spring="http://www.springframework.org/tags"
	xmlns:c="http://java.sun.com/jsp/jstl/core">
	
	<jsp:output doctype-root-element="HTML" doctype-system="about:legacy-compat" />
	<jsp:directive.page contentType="text/html;charset=UTF-8" />
	<jsp:directive.page pageEncoding="UTF-8" />
	
	<head>
		<meta http-equiv="Content-Type" content="text/html; charset=UTF-8" />
		<meta http-equiv="X-UA-Compatible" content="IE=8" />
		
		<spring:url value="/resources/styles/standart.css" var="reportsCssUrl" />
        <link rel="stylesheet" type="text/css" media="screen" href="${reportsCssUrl}" />
		
		<title><spring:message code="user.login" /> - <spring:message code="app.name" /></title>
	</head>
	<body class="form">
		<div id="header">
			<h1><spring:message code="user.login" /></h1>
		</div>
		<spring:url value="/j_spring_security_check" var="submitUrl" />
		<form method="post" action="${submitUrl}">
			<c:if test="${error}">
				<p class="errors">
					<spring:message code="validation.login" />
				</p>
			</c:if>
			<p>
				<label for="j_username">
					<spring:message code="user.email" />
				</label>
				<input name="j_username" />
			</p>
			<p>
				<label for="j_password">
					<spring:message code="user.password" />
				</label>
				<input name="j_password" type="password" />
			</p>
			<p class="actions">
				<spring:url value="/register" var="registerUrl" />
				<a href="${registerUrl}">
					<spring:message code="user.register" />
				</a>
				<spring:url value="/restore" var="restoreUrl" />
				<a href="${restoreUrl}">
					<spring:message code="user.password.restore" />
				</a>
			</p>
			<p>
				<spring:message code="ok" var="ok"/>
				<input type="submit" value="${ok}" />
			</p>
		</form>
	</body>
</html>