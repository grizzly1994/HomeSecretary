<?xml version="1.0" encoding="UTF-8" standalone="no"?> 
<div xmlns:jsp="http://java.sun.com/JSP/Page" 
     xmlns:c="http://java.sun.com/jsp/jstl/core" 
     xmlns:joda="http://www.joda.org/joda/time/tags" 
     xmlns:form="http://www.springframework.org/tags/form"
     xmlns:spring="http://www.springframework.org/tags"
     version="2.0">
     
    <jsp:directive.page contentType="text/html;charset=UTF-8" /> 
    <jsp:output omit-xml-declaration="yes" />

	<spring:message code="recordsEdit.beginDate.label" var="beginDateLabel" />
	<spring:message code="recordsEdit.endDate.label" var="endDateLabel" />
	<spring:message code="recordsEdit.name.label" var="nameLabel" />
	<spring:message code="recordsEdit.comment.label" var="commentLabel" />
	<spring:message code="recordsEdit.sum.label" var="sumLabel" />
	<spring:message code="recordsEdit.interestRate.label" var="interestRateLabel" />
	<spring:message code="recordsEdit.period.label" var="periodLabel" />
    <spring:message code="recordsEdit.save.label" var="saveLabel" />
    <spring:message code="recordsEdit.cancel.label" var="cancelLabel" />
    
    <spring:message code="recordsEdit.day.option" var="day" />
    <spring:message code="recordsEdit.week.option" var="week" />
    <spring:message code="recordsEdit.month.option" var="month" />
    <spring:message code="recordsEdit.year.option" var="year" />

	<form id="creditsEditor" method="post" enctype="multipart/form-data">
		<p>
			<label> ${beginDateLabel} </label>
			<input class="datePicker" />
			<span>
				<errors cssClass="error" />
			</span>
		</p>
		<p>
			<label> ${endDateLabel} </label>
			<input class="datePicker" />
			<span>
				<errors cssClass="error" />
			</span>
		</p>
		<p>
			<label> ${nameLabel} </label>
			<input />
			<span>
				<errors cssClass="error" />
			</span>
		</p>
		<p>
			<label> ${commentLabel} </label>
			<textarea>
				<jsp:text />
			</textarea>
			<span>
				<errors cssClass="error" />
			</span>
		</p>
		<p>
			<label> ${sumLabel} </label>
			<input class="decimalSpinner" />
			<span>
				<errors cssClass="error" />
			</span>
		</p>
		<p>
			<label> ${interestRateLabel} </label>
			<input class="decimalSpinner" />
			<span>
				<errors cssClass="error" />
			</span>
		</p>
		<p>
			<label> ${periodLabel} </label>
			<input class="integerSpinner" />
			<select>
				<option>${day}</option>
				<option>${week}</option>
				<option>${month}</option>
				<option>${year}</option>
			</select>
			<span>
				<errors cssClass="error" />
			</span>
		</p>
		<button type="submit"
			class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
			<span class="ui-button-text"> ${saveLabel} </span>
		</button>
		<button type="reset"
			class="ui-button ui-widget ui-state-default ui-corner-all ui-button-text-only">
			<span class="ui-button-text"> ${cancelLabel} </span>
		</button>
	</form>
</div>