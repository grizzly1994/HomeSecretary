<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:p="http://www.springframework.org/schema/p"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans 
            http://www.springframework.org/schema/beans/spring-beans-2.5.xsd
            http://www.springframework.org/schema/context 
            http://www.springframework.org/schema/context/spring-context-2.5.xsd">

    <!-- Включаем использование аннотаций для конфигурации Spring -->
    <context:annotation-config/>
    <context:property-placeholder location="classpath:jdbc.properties"/>
    
    <bean name="userService" class="com.simbircite.secretary.service.UserService"/>
    
    <bean name="reportsService" class="com.simbircite.secretary.service.ReportsService"/>
    
    <bean name="payService" class="com.simbircite.secretary.service.PayService"/>
    <bean name="debtService" class="com.simbircite.secretary.service.DebtService"/>
    <bean name="budgetService" class="com.simbircite.secretary.service.BudgetService"/>
    
    <bean name="debtStateService" class="com.simbircite.secretary.service.DebtStateService"/>
    <bean name="budgetStateService" class="com.simbircite.secretary.service.BudgetStateService"/>
    
    <bean name="keyGenerationService" class="com.simbircite.secretary.service.KeyGenerationService"/>
    <bean name="encryptService" class="com.simbircite.secretary.service.EncryptService"/>
</beans>
